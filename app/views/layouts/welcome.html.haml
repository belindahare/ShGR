    #skills
      .container
        .row.centered
          %h3 HOW TO MAKE A DIFFERENCE IN YOUR COMMUNITY
          .col-lg-3.mt
            %canvas#javascript{:height => "130", :style => "width: 130px; height: 130px;", :width => "130"}
            %p Sign up today as a supporter on ShGR.  It only takes a minute and it's the most "difficult" step, promise! 
            %br/
            :javascript
              var doughnutData = [
                  {
                    value: 25,
                    color:"#74cfae"
                  },
                  {
                    value : 75,
                    color : "#3c3c3c"
                  }
                ];
                var myDoughnut = new Chart(document.getElementById("javascript").getContext("2d")).Doughnut(doughnutData);
          .col-lg-3.mt
            %canvas#bootstrap{:height => "130", :style => "width: 130px; height: 130px;", :width => "130"}
            %p Next time you go grocery shopping, purchase one item from your assigned organization's list- tell your cashier that this item is for ShGR so it can be held aside for pickup.
            %br/
            :javascript
              var doughnutData = [
                  {
                    value: 50,
                    color:"#74cfae"
                  },
                  {
                    value : 50,
                    color : "#3c3c3c"
